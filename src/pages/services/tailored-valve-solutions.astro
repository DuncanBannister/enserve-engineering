---
import Layout from '../../layouts/Layout.astro';

// React page components - maintaining exact order from index.jsx
import { Header54 } from "../../react-pages/services/tailored-valve-solutions/components/header-54";
import { Layout12 } from "../../react-pages/services/tailored-valve-solutions/components/layout-12";
import { Layout197 } from "../../react-pages/services/tailored-valve-solutions/components/layout-197";
