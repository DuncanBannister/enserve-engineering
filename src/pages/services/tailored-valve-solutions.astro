---

<Layout 
  title={pageTitle}
  description={description}
  canonicalURL={canonicalURL}
  keywords={keywords}
  image={ogImage}
  type="website"
  structuredData={structuredData}
>
  <main id="main-content" class="flex flex-col min-h-screen">
      <!-- Hero section with CTA - critical above-fold interactive content -->
      <Header54 client:load />
      
      <!-- Content sections - progressive enhancement, hydrate when visible -->
      <Layout12 client:visible />
      <Layout197 client:visible />
      <Layout237 client:visible />
      
      <!-- CTA section - important for conversions, hydrate when visible -->
      <Cta1 client:visible />
