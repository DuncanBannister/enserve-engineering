---
import Layout from '../layouts/Layout.astro';

// React page components
import { Header50 } from "../react-pages/about/components/header-50";
import { Layout22 } from "../react-pages/about/components/layout-22";
import { Team2 } from "../react-pages/about/components/team-02";
import { Testimonial13 } from "../react-pages/about/components/testimonial-13";
import { Cta7 } from "../react-pages/about/components/cta-07";
import { Timeline9 } from "../react-pages/about/components/timeline-09";
import { Contact20 } from "../react-pages/about/components/contact-20";

// SEO Metadata 
const pageTitle = "About Enserve Engineering | Industrial Engineering Solutions";
const description = "Learn about Enserve Engineering's commitment to excellence in industrial engineering, automation, and sustainable solutions. Discover our journey, values, and expertise.";
const canonicalURL = new URL('/about', Astro.site);
const keywords = "industrial engineering, valve solutions, engineering expertise, automation solutions, Enserve team, engineering services Africa";
const ogImage = "/og-about.jpg";

// Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "Organization",
    "name": "Enserve Engineering",
    "description": description,
    "foundingDate": "2003",
    "image": ogImage,
    "award": [
      {
        "@type": "Award",
        "name": "ISO 9001:2015 Certification"
      }
    ],
    "areaServed": [
      {
        "@type": "Country",
        "name": "South Africa",
        "identifier": "ZA"
      },
      {
        "@type": "Country",
        "name": "Namibia",
        "identifier": "NA"
      },
      {
        "@type": "Country",
        "name": "Botswana",
        "identifier": "BW"
      },
      {
        "@type": "Country",
        "name": "Mozambique",
        "identifier": "MZ"
      }
    ],
    "knowsAbout": [
      "Industrial Valve Solutions",
      "Valve Maintenance",
      "Engineering Services",
      "LDAR Services",
      "Industrial Automation"
    ],
    "numberOfEmployees": {
      "@type": "QuantitativeValue",
      "value": "20+"
    }
  }
};
---

<Layout 
  title={pageTitle}
  description={description}
  canonicalURL={canonicalURL}
  keywords={keywords}
  image={ogImage}
  type="website"
  structuredData={structuredData}
>
  <main id="main-content" class="flex flex-col min-h-screen">
    {/* Static content - no client directive needed */}
    <Header50 />
    <Layout22 />
    
    {/* Interactive components - load when visible */}
    <Team2 client:visible />

      {/* Static testimonials - no JavaScript needed */}
    <Testimonial13  />

  
    <Timeline9 client:visible />

     {/* Call to action - load when visible if interactive */}
    <Cta7 client:visible />

     
        
    {/* Interactive form - load when visible */}
    <Contact20 client:visible />
    
   
  </main>
</Layout>